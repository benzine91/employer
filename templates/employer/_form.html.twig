    <div class="container">
    <div class="m-3 p-3"></div>
        <div class="card">
        {{ form_start(form) }}
 
            <div class="card-body">
            <div class="row">
                <div class="col form-group py-2">
                    <div>{{ form_label(form.prenom) }}</div>
                    <div class="text-danger">{{ form_errors(form.prenom) }}</div>
                    <div>{{ form_widget(form.prenom) }}</div>
                </div>
                <div class="col form-group py-2">
                    <div>{{ form_label(form.nom) }}</div>
                    <div class="text-danger">{{ form_errors(form.nom) }}</div>
                    <div>{{ form_widget(form.nom) }}</div>
                </div>
            </div>
            <div class="row">
                <div class="col form-group py-2">
                    <div>{{ form_label(form.telephone) }}</div>
                    <div class="text-danger">{{ form_errors(form.telephone) }}</div>
                    <div>{{ form_widget(form.telephone) }}</div>
                </div>
                <div class="col form-group py-2">
                    <div>{{ form_label(form.email) }}</div>
                    <div class="text-danger">{{ form_errors(form.email) }}</div>
                    <div>{{ form_widget(form.email) }}</div>
                </div>
            </div>
                <div class="form-group py-2">
                    <div>{{ form_label(form.adresse) }}</div>
                    <div class="text-danger">{{ form_errors(form.adresse) }}</div>
                    <div>{{ form_widget(form.adresse) }}</div>
                </div>
            <div class="row">
                 <div class="col form-group py-2">
                    <div>{{ form_label(form.poste) }}</div>
                    <div class="text-danger">{{ form_errors(form.poste) }}</div>
                    <div>{{ form_widget(form.poste) }}</div>
                </div>
                <div class="col form-group py-2">
                    <div>{{ form_label(form.salaire) }}</div>
                    <div class="text-danger">{{ form_errors(form.salaire) }}</div>
                    <div>{{ form_widget(form.salaire) }}</div>
                </div>
            </div>    
                <div class="form-group py-2">
                    <div>{{ form_label(form.dateDeNaissance) }}</div>
                    <div class="text-danger">{{ form_errors(form.dateDeNaissance) }}</div>
                    <div>{{ form.dateDeNaissance|date("d/m/Y") }}</div>
                </div>              
            </div>
            <div class="card-footer text-muted d-flex justify-content-end bg-white ">
                {{ form_row(form.save) }}
            </div>
        {{ form_end(form) }}
        </div>
        <div class="m-3 p-3"></div>
    </div>
    </div>